# -----------------------------------------------------------------------------
# -- ssh keychain / ssh-agent
# -----------------------------------------------------------------------------
#if [ "$(command -v keychain && test -f ~/.bashrc)" ]; then
if [ "$(test -f ${HOME}/.keychain.enable && command -v keychain && test -f ~/.bashrc)" ]; then
    for f in ~/.ssh/id_?sa; do
        keychain --noask $f &> /dev/null;
    done;
    . ~/.keychain/$(hostname)-sh;
fi
